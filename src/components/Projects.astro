---
import '../styles/global.css';
const  { projectImage, projectImageAlt, projectTitle, projectLink, projectType } = Astro.props;
---
<a href=`${projectLink}` class="project-link">
  <div class="project-container">
    <div class="project-image-wrapper">
      <img src=`images/${projectImage}.png` alt=`${projectImageAlt}` class="project-image">
    </div>
    <div class="project-info">
      <div class="project-titles">
        <p class="project-title">{projectTitle}</p>
        <p class="project-type">{projectType}</p> 
      </div>
      <div class="project-arrow">
        <img src="images/arrow.svg" alt="Arrow Icon">
      </div>
    </div>
</div>
</a>


<style>
  .project-container {
	  background-color: var(--bg-container);
	  border-radius: 1rem;
	  border: 1px solid var(--light-border);
    box-shadow: 0px 0px 10px rgba(243, 93, 24, 0.247);
	  transition: all 0.3s linear;
  }

  .project-container:hover {
  	box-shadow: 0px 0px 25px rgba(243, 93, 24, 0.247);
  }

  .project-image-wrapper {
  	overflow: hidden;
    border-radius: 1rem 1rem 0 0;
  }

  .project-image {
    width: 100%;
    transition: transform 0.3s ease;
  }

  .project-info {
  	padding: 2.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .project-arrow {
    border: 1px solid var(--light-border);
    border-radius: 2rem;
    padding: 0.3rem;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
  }

  .project-container:hover .project-arrow {
    transform: rotate(-30deg);
    border: 1px solid var(--accent-color);
  }

  .project-container:hover .project-title {
    color: var(--accent-color);
  }

  .project-container:hover .project-image {
  	transform: scale(1.05);
  }

  .project-title {
    font-family: var(--titles);
  	font-size: 1.8rem;
  	font-weight: 400;
    color: #fff;
    margin-bottom: 0.5rem;
  }

  .project-link {
    text-decoration: none;
    color: var(--accent-color);
    transition: all 0.3s ease;
  }

  .project-text-link:hover {
    color: #fff;
  }


</style>