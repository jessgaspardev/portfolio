---
import type { HTMLAttributes } from "astro/types";

const headingOptions = {
    h1: 'lg:text-80/12 md:text-72/12 text-64/12',
    h2: 'lg:text-72/12 md:text-64/12 text-56/12',
    h3: 'lg:text-64/12 md:text-56/12 text-48/12',
    h4: 'lg:text-56/12 md:text-48/12 text-40/12',
    h5: 'lg:text-48/12 md:text-40/12 text-32/12',
    h6: 'lg:text-40/12 md:text-32/12 text-24/12'
}

interface Props extends HTMLAttributes<'h1'> {
    tagName: keyof typeof headingOptions;
    tagSize: keyof typeof headingOptions;
};

const { tagName, tagSize, class: className, ...rest} = Astro.props;
const Tag = tagName;

const baseStyle = "font-title text-dark"
---

<Tag class:list={[baseStyle, headingOptions[tagSize], className]}{...rest}><slot /></Tag>