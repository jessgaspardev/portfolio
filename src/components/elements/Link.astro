---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
    href: string,
    variant: "inline" | "button",
    newWindow?: boolean
}

const { href, variant, newWindow = false, class: className, ...rest} = Astro.props;

// common styling
const baseStyle = "text-dark bg-none"

//styling for each variant
const variantStyle = {
    inline: "font-text underline underline-offset-3 hover:bg-accent",
    button: "text-24 font-link"
}
---

<a href={href}
    class:list={[baseStyle, variantStyle[variant], className]}
    target={newWindow ? "_blank" : undefined}
    rel={newWindow ? "noopener noreferrer" : undefined}
    {...rest}>
    <slot />
</a>